<div class="container-fluid mint">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1" style="margin-bottom:50px;margin-top:50px;">
      <div class="col-lg-2 col-sm-4 col-xs-6 col-xs-offset-3 col-sm-offset-4 col-lg-offset-5">
        <%= link_to root_path do %>
          <%= image_tag 'logo_white.svg' %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-8 col-xs-offset-2 signup_container">
      <span class="form_header"><%= resource_name.capitalize %> Signup</span>
      <br/>
      <span class="form_sub">Thank you for signing up. Already a member? 
        <%= link_to 'Login Here', send("new_#{resource_name}_session_path") %>
      </span>
      <br/><br/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="col-xs-3" style="text-align:right;">
          <label for="office" class="labels" style="margin-top:7px;">First Name:</label><br/>
          <label for="date" class="labels">Last Name:</label><br/>
          <label for="timeend" class="labels">Email:</label>
          <br/><br/>
          <label for="timeend" class="labels">Password:</label>
        </div>

        <div class="col-xs-9" style="margin-bottom:20px;">
          <div class="form-group">
            <%= f.text_field :first_name, autofocus: true, class: "form-control", id: "first_name", placeholder: "Enter first name..." %>
          </div>
          <div class="form-group">
            <%= f.text_field :last_name, autofocus: true, class: "form-control", id: "first_name", placeholder: "Enter last name..." %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Enter your email..." %>
          </div>
          <br/>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "verify_email", placeholder: "Enter a password..." %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "verify_email", placeholder: "Verify your password..." %>
          </div>
        </div>

        <div class="modal-footer" style="clear:both;">
          <br/>
          <%= link_to "Cancel", root_path, class: "btn-lg btn", type: 'button' %>
          <%= f.submit "Create Account", class: "btn-lg btn-success" %>
          <br />
        </div>
      <% end %>
    </div>
  </div>
</div>
